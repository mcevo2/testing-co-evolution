<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Sample Category"
            id="testppup1">
      </category>
      <view
            id="testppup1.views.SampleView"
            name="Sample View"
            icon="icons/sample.png"
            class="testppup1.views.SampleView"
            category="testppup1"
            inject="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="testppup1.views.SampleView"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               ratio="0.5">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="testppup1.views.SampleView"
            id="getErrors"
            name="Get list of errors">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
   
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         
               
            <command
                  commandId="getErrors"
                  icon="icons/sample.png"
                  label="Get errors"
                  style="push">
            </command>
         
      </menuContribution>
   </extension>

</plugin>
